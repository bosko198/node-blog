<%- include('layout', { title: post.title, description: post.excerpt }) %>
<article>
  <h2><%= post.title %></h2>
  <p><small><%= post.createdAt.toDateString() %></small></p>
  <div><%- post.content %></div>
  <% if (post.tags && post.tags.length) { %>
    <p>Tags: <%= post.tags.join(', ') %></p>
  <% } %>
  <a href="/edit/<%= post.slug %>">Edit</a>
  <form action="/delete/<%= post.slug %>?_method=DELETE" method="post" style="display:inline;">
    <button type="submit">Delete</button>
  </form>
</article>